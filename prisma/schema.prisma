// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Balloon {
  id           String    @id @default(uuid())
  ownerId      String
  owner        User      @relation(fields: [ownerId], references: [id])
  name         String
  guests       Int
  lat          Float
  long         Float
  locationName String
  listings     Listing[]
  startDate    String
  endDate      String

  @@unique([id, ownerId])
}

model User {
  id       String    @id @default(uuid())
  name     String    @unique
  email    String
  password String
  ballons  Balloon[]
}

model Listing {
  id                String  @id
  name              String
  thumbnailImageUrl String
  lat               Float
  long              Float
  distance          Float?
  locationName      String
  balloonId         String
  balloon           Balloon @relation(fields: [balloonId], references: [id])
  tags              Tag[]
}

model Tag {
  id        String  @id @default(uuid())
  listingId String
  listing   Listing @relation(fields: [listingId], references: [id])
  value     String
  color     String
}
