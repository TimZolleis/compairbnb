// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Balloon {
  id           String    @id @default(uuid())
  ownerId      String
  owner        User      @relation(fields: [ownerId], references: [id])
  name         String
  participants Int
  listings     Listing[]
  startDate    String
  endDate      String
}

model User {
  id       String    @id @default(uuid())
  name     String    @unique
  email    String
  password String
  ballons  Balloon[]
}

model Listing {
  id         String  @id
  rating     Int?
  customName String?
  balloonId  String
  balloon    Balloon @relation(fields: [balloonId], references: [id])
}
